import pandas as pd
import numpy as np
from sklearn.preprocessing import PowerTransformer

file_path = r"C:\Users\acer67\Downloads\day19_transform.csv"
df = pd.read_csv(file_path)

print("البيانات الأصلية:")
print(df.head())

feature_col = 'spend'

df['log1p'] = np.log1p(df[feature_col])
df['sqrt'] = np.sqrt(df[feature_col])

pt = PowerTransformer(method='yeo-johnson')
df['yeojohnson'] = pt.fit_transform(df[[feature_col]])

print("\nملخص البيانات بعد التحويلات:")
print(df[[feature_col, 'log1p', 'sqrt', 'yeojohnson']].describe())
