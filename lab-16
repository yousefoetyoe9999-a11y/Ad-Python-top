import pandas as pd
from sklearn.preprocessing import LabelEncoder

file_path = r"C:\Users\acer67\Downloads\day16_encoding.csv"
df = pd.read_csv(file_path)

print("البيانات الأصلية:")
print(df.head())

le = LabelEncoder()
df['city_label'] = le.fit_transform(df['city'])
print("\nبعد Label Encoding:")
print(df[['city', 'city_label']].head())

df_onehot = pd.get_dummies(df, columns=['city'])
print("\nبعد One-Hot Encoding:")
print(df_onehot.head())

print("\nملخص الإحصائيات للبيانات بعد التشفير:")
print(df_onehot.describe())
